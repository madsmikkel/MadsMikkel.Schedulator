<Window x:Class="MadsMikkel.Schedulator.UI.WinDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MadsMikkel.Schedulator.UI.WinDesktop"
        mc:Ignorable="d"
        Closing="MainWindow_Closing"
        Title="Schedulator"
        d:DesignHeight="1080"
        d:DesignWidth="1920"
        WindowState="Maximized">
    <DockPanel x:Name="dockPanel">
        <Menu x:Name="nemu"
              DockPanel.Dock="Top">
            <MenuItem Header="Filer">
                <MenuItem Header="Afslut"
                          Click="MenuItem_File_Close_Click" />
            </MenuItem>
            <MenuItem Header="Hjælp">
                <MenuItem Header="Om"
                          Click="MenuItem_Help_About_Click" />
            </MenuItem>
        </Menu>
        <StatusBar x:Name="statusBar"
                   DockPanel.Dock="Bottom">
            <TextBlock x:Name="textStatusBar"
                       Text="Klar til input" />
        </StatusBar>
        <Grid x:Name="centerGrid">

        </Grid>
    </DockPanel>
</Window>